<h5>Lista Postagens:</h5>
<hr>
 <a href="/admin/postagens/add"> 
     <button class="btn btn-success"><h6>+ Nova Postagem</h6></button>
  </a>

   {{#each postagens}}
         <div class="card mt-2">
             <div class="card-body">
                 <h4>{{titulo}}</h4>
                 <small>Descrição: {{descricao}}</small><br>
                 <small><b>Data:</b>{{data}}</small><br>
                 <small>Categoria: {{categoria.nome}}</small><br>
                 <a href="/admin/postagens/edit/{{_id}}"><button style="color: rgba(0, 0, 0, 0.562);padding-right: 18px;margin: 8px 0;font-weight: 500;" class="btn btn-warning  mt-4 pl-3">Editar</button></a><br>
                 <a href="/admin/postagens/deletar/{{_id}}"><button class="btn btn-danger mt-0">Deletar</button></a>
                </div>
         </div>
   {{else}}
        <h4 class="mt-3">Nenhuma Postagem registrada</h4>
   {{/each}}
     <div class="p-2"></div>