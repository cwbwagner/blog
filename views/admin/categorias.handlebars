<h5>Lista Categorias:</h5>
<hr>
 <a href="/admin/categorias/add"> 
     <button class="btn btn-success"><h5>Nova Categoria</h5></button>
  </a>

   {{#each categorias}}
         <div class="card mt-2">
             <div class="card-body">
                 <h4>{{nome}}</h4>
                 <small>{{slug}}</small><br>
                 <small><b>Data:</b>  {{date}}</small><br>
                 <a href="/admin/categorias/edit/{{_id}}"><button style="color: rgb(29, 27, 27);padding-right: 20px;margin: 8px 0;" class="btn btn-warning  mt-4 pl-3">Editar</button></a>
                <form action="/admin/categorias/deletar" method="post">
                    <input type="hidden" name="id" value="{{_id}}">
                    <button type="submit" class="btn btn-danger">Deletar</button>
                </form>
             </div>
         </div>
   {{else}}
        <h4 class="mt-3">Nenhuma Categoria registrada</h4>
   {{/each}}

     <div class="p-2"></div>